/* ================== 其他常用控件 ================== */
QLabel { /* color 会继承 QWidget */ }

QLineEdit, QPlainTextEdit { 
    background-color: #ffffff; 
    border: 1px solid #FCEAE4; 
    border-radius: 8px; 
    padding: 8px; 
    color: #2C160D; 
}
QComboBox { 
    background-color: #ffffff; 
    border: 1px solid #FCEAE4; 
    border-radius: 0px; /* 去掉圆角 */
    padding: 8px; 
    color: #2C160D; 
}
QComboBox::drop-down { border: none; }
QComboBox QAbstractItemView { /* 下拉列表本身的样式 */
    border: 1px solid #FCEAE4;
    background-color: #FFF8F6;
    selection-background-color: #FFDBCF;
    selection-color: #2C160D; /* 选中项文字颜色 */
    outline: 0px; /* 去掉选中时的虚线框 */
}


QGroupBox { 
    border: 1px solid #FCEAE4; 
    border-radius: 8px; 
    margin-top: 10px; /* 为标题留出空间 */
    padding: 25px 10px 10px 10px; /* 上(为标题留空)、右、下、左 */
}
QGroupBox::title { 
    subcontrol-origin: margin; 
    subcontrol-position: top left; 
    padding: 0px 8px; /* 标题左右留白 */
    margin-left: 10px; /* 标题距离左边框的距离 */
    background-color: #FFF8F6; /* 使标题看起来像是刻在背景上 */
    color: #2C160D;
    font-weight: bold;
}

QListWidget, QTableWidget { 
    background-color: #ffffff; 
    border: 1px solid #FCEAE4; 
    border-radius: 8px; 
}
QTableWidget { /* 表格特有的交替行颜色 */
    alternate-background-color: #fefcfb; 
}
QListWidget::item { 
    padding: 10px; 
    border-bottom: 1px solid #FFF8F6; 
}
QListWidget::item:selected, QTableWidget::item:selected { 
    background-color: #FFDBCF; 
    color: #2C160D; 
}

QHeaderView::section { 
    background-color: #FCEAE4; 
    padding: 10px; 
    border: none; /* 通常表头不需要左右边框 */
    border-bottom: 1px solid #FFDBCF; 
    font-weight: bold;
    color: #2C160D;
}

QProgressBar { 
    border: 1px solid #FCEAE4; 
    border-radius: 12px; 
    text-align: center; 
    color: #2C160D; 
    height: 24px; 
}
QProgressBar::chunk { 
    background-color: #8F4C33; 
    border-radius: 11px; /* 比父控件小一点，形成边框感 */
}

QSlider::groove:horizontal { 
    border: none; 
    height: 8px; 
    background: #FCEAE4; 
    margin: 2px 0; 
    border-radius: 4px; 
}
QSlider::handle:horizontal { 
    background: #8F4C33; 
    border: none; 
    width: 20px; 
    margin: -6px 0; /* 使句柄在视觉上覆盖轨道 */
    border-radius: 10px; 
}

QScrollBar:vertical { 
    border: none; 
    background: #fbeee9; 
    width: 15px; 
    margin: 0; 
}
QScrollBar::handle:vertical { 
    background: #FCEAE4; 
    min-height: 25px; /* 增加最小高度，更容易点击 */
    border-radius: 7px; 
}
QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical { /* 隐藏上下箭头 */
    border: none;
    background: none;
    height: 0px;
    subcontrol-position: top;
    subcontrol-origin: margin;
}
/* 水平滚动条类似，如果需要的话 */

/* ================== 全局右键菜单 (QMenu) 样式 ================== */
QMenu {
    background-color: #FFF8F6;
    color: #2C160D;
    border: 1px solid #FCEAE4;
    padding: 5px;
    border-radius: 4px;
}

QMenu::item {
    background-color: transparent;
    color: #2C160D;
    padding: 8px 25px 8px 25px;
    border: 1px solid transparent;
    margin: 2px 0px;
}

QMenu::item:selected {
    background-color: #FFDBCF;
    color: #2C160D;
    border-radius: 3px;
}

QMenu::item:disabled {
    color: #a0a0a0;
    background-color: transparent;
}

QMenu::separator {
    height: 1px;
    background: #FFDBCF;
    margin-left: 10px;
    margin-right: 10px;
    margin-top: 3px;
    margin-bottom: 3px;
}

QMenu::icon {
    padding-left: 10px;
    width: 16px;
    height: 16px;
}