/*
 * Modern Light 2-Level Tab Theme v1.3 (Normalized)
 * Author: AI Assistant & Sager
 * Description: A clean, modern light theme for a 2-level tabbed UI with larger fonts.
 */

/* ================== 全局样式 ================== */
QWidget {
    font-family: "Microsoft YaHei", sans-serif;
    color: #2C160D;
    background-color: transparent; /* 全局透明背景，具体控件再覆盖 */
    font-size: 18px;
}

QMainWindow { /* 主窗口，也是大部分页面的背景 */
    background-color: #FFF8F6; 
}

QMessageBox, QDialog { 
    background-color: #FFF8F6; 
}
QMessageBox QLabel { 
    font-size: 18px; 
    /* color 会继承 QWidget 的全局设置 */
}

/* ================== 一级标签页 (Ribbon-Style) ================== */
QTabWidget#MainTabWidget::pane { 
    border-top: 1px solid #FFDBCF; 
    background-color: #FFF8F6; /* 确保内容区背景与主窗口一致 */
}
QTabWidget#MainTabWidget::tab-bar { 
    alignment: left; 
}

QTabBar::tab:!first { /* 用于处理相邻标签边框重叠 */
    margin-left: -1px; 
}

QTabWidget#MainTabWidget QTabBar::tab {
    background: #FCEAE4;
    color: #8F4C33;
    border: 1px solid #FFDBCF;
    border-bottom: none; /* 选中的标签底部边框由 pane 的 top-border 形成融合感 */
    font-size: 20px;
    font-weight: bold;
    margin-right: 4px; 
    min-width: 180px;
    padding: 12px 20px;
}

QTabWidget#MainTabWidget QTabBar::tab:hover {
    background: #FFDBCF;
}

QTabWidget#MainTabWidget QTabBar::tab:selected {
    background: #FFF8F6; 
    color: #2C160D;
    border-top-left-radius: 6px;
    border-top-right-radius: 6px;
    /* border-bottom-color: #FFF8F6; 让 pane 的 border-top 生效 */
}

QTabWidget#MainTabWidget QTabBar::tab:disabled { /* 为禁用的主标签页添加样式 */
    background: #E0E0E0;
    color: #a0a0a0;
}


/* ================== 二级标签页 (Compact-Style) ================== */
QTabWidget#SubTabWidget::pane { 
    border: none; 
    background-color: transparent; /* 二级标签页的内容区通常是其父控件的背景 */
}
QTabWidget#SubTabWidget::tab-bar { 
    alignment: left; 
}

QTabWidget#SubTabWidget QTabBar::tab {
    background: transparent;
    color: #8F4C33;
    border: none;
    border-bottom: 3px solid transparent;
    padding: 10px 25px; 
    font-size: 18px;
}

QTabWidget#SubTabWidget QTabBar::tab:hover {
    background-color: #fef5f2;
    border-bottom: 3px solid #FFDBCF;
}

QTabWidget#SubTabWidget QTabBar::tab:selected {
    color: #2C160D;
    font-weight: bold;
    border-bottom: 3px solid #8F4C33;
}

QTabWidget#SubTabWidget QTabBar::tab:disabled { /* 为禁用的子标签页添加样式 */
    color: #b0b0b0;
}

/* ================== 按钮样式 ================== */
QPushButton {
    border: none; 
    padding: 12px 24px; 
    border-radius: 22px; 
    font-size: 18px;
    background-color: #FCEAE4; 
    color: #2C160D;
}
QPushButton:hover { background-color: #FFDBCF; }
QPushButton:pressed { background-color: #e8d2c6; }
QPushButton:disabled { background-color: #E0E0E0; color: #a0a0a0; }

/* 特殊按钮: AccentButton (强调按钮) */
QPushButton#AccentButton { 
    background-color: #8F4C33; 
    color: #FFF8F6; 
    font-weight: bold; 
}
QPushButton#AccentButton:hover { background-color: #a45f43; }
QPushButton#AccentButton:pressed { background-color: #7a3f23; }

/* 特殊按钮: LinkButton (表格内链接式删除按钮) */
QPushButton#LinkButton {
    background-color: transparent;
    color: #8F4C33;
    border: none;
    text-decoration: underline;
    padding: 5px;
    border-radius: 0px;
    font-size: 16px; /* 链接按钮可以小一点 */
}
QPushButton#LinkButton:hover { color: #a45f43; }
QPushButton#LinkButton:pressed { color: #2C160D; }

