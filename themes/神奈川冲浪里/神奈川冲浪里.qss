/* ==========================================================================
   单选按钮样式 (Radio Button as Square Toggle)
   ========================================================================== */

/* 单选按钮整体 */
QRadioButton {
    spacing: 12px;           /* 指示器和文本之间的距离 */
    padding: 8px 0;          /* 上下内边距 */
    font-size: 18px;         /* 字号 */
    font-weight: normal;     /* 未选中时为正常粗细 */
    color: #8AB2D6;           /* 未选中时文字颜色：柔和波浪蓝 */
}
/* 鼠标悬停在单选按钮上时 */
QRadioButton:hover {
    color: #3B6894; /* 悬停时文字颜色：深波浪蓝 */
}
/* 选中的单选按钮 */
QRadioButton:checked {
    color: #1C2A40;     /* 选中时文字颜色：墨色 */
    font-weight: bold; /* 选中时字体加粗 */
}

/* --- 指示器 (Indicator) --- */
/* 单选按钮的指示器 (即那个“点”) */
QRadioButton::indicator {
    width: 22px;               /* 宽度 */
    height: 22px;              /* 高度 */
    border-radius: 0px;        /* [核心修改] 方形，无圆角 */
    border: 1px solid #C5D9E8; /* 默认边框：浅天蓝 */
    background-color: #FFFFFF; /* 默认背景：纯白 */
}
/* 鼠标悬停在指示器上时 */
QRadioButton::indicator:hover {
    border: 1px solid #8AB2D6; /* 悬停边框：柔和波浪蓝 */
}
/* 选中的指示器 */
QRadioButton::indicator:checked {
    image: none;               /* [新增] 确保不显示任何意外的默认图像 */
    border: 1px solid #1C2A40; /* 选中边框：墨色 */
    background-color: #3B6894; /* 选中背景：深浪蓝 */
}
/* 禁用的指示器 */
QRadioButton::indicator:disabled {
    border: 1px solid #E8EEF4; /* 边框变浅 */
    background-color: #F5F8FA; /* 背景变灰 */
}
/* 禁用的单选按钮文本 */
QRadioButton:disabled {
    color: #A8B8C8; /* 文字变灰 */
}


/* ==========================================================================
   自定义控件样式 (Custom Widgets)
   ========================================================================== */

/* --- WaveformWidget 波形图控件 --- */
/* 通过 qproperty- 语法设置在 C++ 中定义的自定义属性 */
WaveformWidget {
    qproperty-waveformColor: #3B6894;       /* 波形颜色: 深浪蓝 */
    qproperty-cursorColor: #E53935;         /* 播放头光标颜色: 醒目的红色 */
    qproperty-selectionColor: rgba(138, 178, 214, 100); /* 选区颜色: 半透明的柔和波浪蓝 (100/255 Alpha) */
    border: 1px solid #C5D9E8;              /* 边框：浅天蓝 */
    border-radius: 0px;                     /* 无圆角 */
}
/* 禁用的波形图控件 */
WaveformWidget:disabled {
    /* 当被禁用时，降低其不透明度以提供视觉反馈 */
    qproperty-waveformColor: #A8B8C8; /* 波形颜色变灰 */
    opacity: 0.5;                     /* 整体不透明度降低 */
}

/* --- QToolTip 悬浮提示框 --- */
QToolTip {
    /* [核心] 使用主题中的晴空蓝灰作为背景，呼应“白昼”主题 */
    background-color: #F5F8FA;
    /* [核心] 使用主题中的深色作为文字和边框，形成高对比度 */
    color: #3B6894;
    border: 1px solid #3B6894;
    padding: 6px 10px;        /* 内边距 */
    /* [核心] 坚持主题的锐利、无圆角风格 */
    border-radius: 0px;
    /* 字体与主题保持一致 */
    font-size: 16px;
    font-weight: bold;
}

/* --- 主波形图 (顶部的概览波形) --- */
#AudioAnalysisPage > QWidget > WaveformWidget {
    border: 1px solid #C5D9E8; /* 边框：浅天蓝 */
    border-bottom: none;       /* 与下方的语谱图无缝连接，移除底部边框 */
    border-radius: 0px;        /* 无圆角 */
    /* [修复] 在浅色主题下，背景色应为纯白以获得最佳对比度 */
    qproperty-backgroundColor: #FFFFFF;
    /* 概览波形颜色：使用柔和的波浪蓝，作为背景参考 */
    qproperty-waveformColor: #8AB2D6;
}

/* --- 语谱图控件 (核心可视化区域) --- */
SpectrogramWidget {
    /* 语谱图背景色(能量最低处)：使用晴空蓝灰，与主背景区分 */
    qproperty-spectrogramMinColor: #F5F8FA;
    /* 能量最高处颜色：使用墨色，形成强烈的黑白对比 */
    qproperty-spectrogramMaxColor: #1C2A40;
    /* 强度曲线颜色：使用稳重的深浪蓝 */
    qproperty-intensityColor: #3B6894;
    /* 原始F0点的颜色：使用醒目的红色，提供高辨识度 */
    qproperty-f0Color: #E53935;
    /* 派生F0曲线的颜色：使用略暗的红色，作为F0点的连接线 */
    qproperty-f0DerivedColor: #C62828;
    /* F1高亮颜色：使用最深的墨色，代表最重要的共振峰 */
    qproperty-f1Color: #1C2A40;
    /* 其他共振峰颜色：使用深浪蓝，作为次要信息 */
    qproperty-formantColor: #3B6894;
    /* 播放头光标颜色：保持醒目的红色 */
    qproperty-cursorColor: #E53935;
    /* 鼠标悬停信息框的文字和背景色 */
    qproperty-infoTextColor: #1C2A40; /* 文字颜色：墨色 */
    qproperty-infoBackgroundColor: rgba(255, 255, 255, 0.85); /* 背景：85%不透明度的纯白 */
    /* 边框样式 */
    border: 1px solid #C5D9E8; /* 边框：浅天蓝 */
    border-radius: 0px;        /* 无圆角 */
}


