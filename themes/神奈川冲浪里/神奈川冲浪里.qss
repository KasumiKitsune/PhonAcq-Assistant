/* ==========================================================================
   标签栏滚动箭头样式 (Tab Bar Scroller Arrow Styling)
   ========================================================================== */

/* 1. 滚动区域的整体容器 */
QTabBar::scroller {
    width: 40px; /* 设置滚动箭头的可用总宽度 */
}

/* 2. 左右滚动箭头按钮的通用样式 */
QTabBar QToolButton {
    background-color: transparent; /* 默认透明背景 */
    border: 1px solid transparent; /* 默认透明边框 */
    border-radius: 4px;            /* 轻微的圆角 */
    min-width: 16px;               /* 最小宽度 */
    min-height: 16px;              /* 最小高度 */
}

/* 3. 鼠标悬停在按钮上时的效果 */
QTabBar QToolButton:hover {
    background-color: rgba(0, 0, 0, 0.1); /* 轻微的半透明黑色背景 */
    border: 1px solid rgba(0, 0, 0, 0.2); /* 轻微的半透明黑色边框 */
}

/* 4. [最关键] 为左右箭头分别设置图标和边距 */
/* 左滚动箭头，通过Qt的内部对象名 #qt_scrolltab_left_button 来选择 */
QTabBar QToolButton#qt_scrolltab_left_button {
    /* 使用 qproperty-icon 语法设置图标，路径相对于资源系统 */
    qproperty-icon: url(://icons/prev.svg);
    margin-right: 3px; /* 增加右边距，使其不紧贴着标签页 */
}
/* 右滚动箭头，通过Qt的内部对象名 #qt_scrolltab_right_button 来选择 */
QTabBar QToolButton#qt_scrolltab_right_button {
    qproperty-icon: url(://icons/next.svg);
    margin-left: 3px; /* 增加左边距，使其不紧贴着标签页 */
}

/* 5. 当箭头不可用时（例如，滚动到最左或最右时）的样式 */
QTabBar QToolButton:disabled {
    background-color: transparent; /* 背景透明 */
    border: 1px solid transparent; /* 边框透明 */
    opacity: 0.3;                  /* 让图标变淡，表示不可用 */
}


/* ==========================================================================
   开关控件样式 (ToggleSwitch Style)
   ========================================================================== */

ToggleSwitch {
    /* 默认状态下的颜色属性 */
    qproperty-trackColorOff: #C5D9E8; /* 关闭时轨道的颜色：浅天蓝 */
    qproperty-trackColorOn: #3B6894;  /* 打开时轨道的颜色：深浪蓝 */
    qproperty-knobColor: #FFFFFF;     /* 滑块的颜色：纯白 */
    qproperty-borderColor: #8AB2D6;   /* 边框的颜色：柔和波浪蓝 */
    
    /* 形状和尺寸属性 */
    qproperty-trackBorderRadius: 0;   /* 轨道的圆角：无 */
    qproperty-borderWidth: 1;         /* 边框宽度 */
    qproperty-knobMargin: 1;          /* 滑块与轨道边缘的间距 */
    qproperty-knobShape: 'rectangle'; /* 滑块形状：矩形 */
    
    /* 控件的固定尺寸 */
    min-width: 60px; max-width: 60px;
    min-height: 28px; max-height: 28px;
    
    /* 布局和文本相关 */
    spacing: 0; padding: 0;           /* 无间距和内边距 */
    font-weight: normal; color: transparent; /* 隐藏关联的文本 */
}

/* 隐藏原生的指示器，因为我们用自定义绘制代替了它 */
ToggleSwitch::indicator {
    width: 0px; height: 0px; border: none; margin: 0; padding: 0;
}

/* 悬停状态，通过控件的动态属性 [hover="true"] 来选择 */
ToggleSwitch[hover="true"] {
    /* 悬停状态下的颜色属性 */
    qproperty-hoverTrackColorOn: #8AB2D6;  /* 悬停在打开状态时轨道的颜色 */
    qproperty-hoverTrackColorOff: #A8B8C8; /* 悬停在关闭状态时轨道的颜色 */
    qproperty-hoverKnobColor: #F5F8FA;     /* 悬停时滑块的颜色 */
    qproperty-hoverBorderColor: #A79B82;   /* 悬停时边框的颜色 */
    
    /* --- [核心修改] --- */
    /*
     * 设置悬停时滑块边距的偏移量。
     * 正数表示增加边距，从而使滑块在视觉上缩小。
     */
    qproperty-hoverKnobMarginOffset: 2; /* 悬停时，滑块边距增加2px，使其看起来更小 */
}