/*
 * The Great Wave - Daylight Edition v1.0
 * Author: AI Assistant & Sager
 * Description: A bright, high-contrast theme inspired by "The Great Wave off Kanagawa" under daylight.
 *              Features sharp angles, dynamic asymmetry, and a striking blue-on-white palette.
 */
/* @icon-path: "icons/" */


/* ==========================================================================
   全局样式 (Global Styles - Daylight Sky & Ink)
   ========================================================================== */

/* 定义所有控件的基础字体、颜色和背景 */
QWidget {
    font-family: "Microsoft YaHei", "Yu Gothic", "Meiryo", sans-serif; /* 优先使用微软雅黑等现代字体 */
    color: #1C2A40;               /* 文字颜色：深普鲁士蓝 (Deep Prussian Blue)，如同版画的墨色 */
    background-color: transparent;   /* 背景默认透明，由父控件决定颜色 */
    font-size: 18px;                 /* 基础字号 */
    font-weight: bold;               /* 基础字重为粗体 */
}

/* 为主窗口和核心内容区域设置统一的背景色 */
QMainWindow,
QWidget#CentralWidget,
QStackedWidget > QWidget,
QTabWidget::pane > QWidget {
    background-color: #F5F8FA; /* 背景颜色：极浅的蓝灰色 (Very Light Blue-Gray)，如同晴空的颜色 */
}

/* 消息框和对话框的样式 */
QMessageBox,
QDialog {
    background-color: #FFFFFF;     /* 背景颜色：纯白 */
    border: 1px solid #8AB2D6;     /* 边框颜色：柔和波浪蓝 (Soft Wave Blue) */
    border-radius: 0px;            /* 边框圆角：无圆角，保持锐利风格 */
}
/* 消息框和对话框内的文本标签样式 */
QMessageBox QLabel,
QDialog QLabel {
    font-size: 18px;               /* 字号 */
    color: #1C2A40;                 /* 文字颜色：深普鲁士蓝 (墨色) */
}


/* ==========================================================================
   一级标签页 (Main Tabs - Sunlit Waves)
   ========================================================================== */

/* 一级标签页的内容面板 */
QTabWidget#MainTabWidget::pane {
    border: 1px solid #8AB2D6; /* 边框颜色：柔和波浪蓝 */
    border-top: none;          /* 顶部无边框，与标签栏无缝衔接 */
    background-color: #F5F8FA; /* 背景颜色：晴空蓝灰 */
}

/* 一级标签页的标签栏 */
QTabWidget#MainTabWidget::tab-bar {
    alignment: left;           /* 标签左对齐 */
    background-color: transparent; /* 背景透明 */
}

/* 一级标签页的单个标签 */
QTabWidget#MainTabWidget QTabBar::tab {
    background-color: #E8EEF4;     /* 背景颜色：更亮的晴空色 (Lighter Sky) */
    color: #A79B82;                 /* 文字颜色：沙/木色 (Sand/Wood Color) */
    border: 1px solid #C5D9E8;     /* 边框颜色：浅天蓝 */
    border-bottom: none;           /* 底部无边框 */
    font-size: 20px;               /* 字号 */
    margin-right: 2px;             /* 标签之间的右边距 */
    min-width: 180px;              /* 最小宽度 */
    padding: 12px 25px 12px 15px;  /* 内边距 (上 右 下 左) */
    border-top-left-radius: 0px;   /* 左上角无圆角 */
    border-top-right-radius: 10px; /* 右上角圆角，形成不对称的波浪感 */
}

/* 鼠标悬停在未选中的一级标签上时 */
QTabWidget#MainTabWidget QTabBar::tab:hover:!selected {
    background-color: #FFFFFF;     /* 背景变为纯白 */
    color: #3B6894;                 /* 文字变为深浪蓝 (Deep Wave Blue) */
}

/* 选中的一级标签 */
QTabWidget#MainTabWidget QTabBar::tab:selected {
    background-color: #F5F8FA;     /* 背景与内容面板颜色一致，融为一体 */
    color: #3B6894;                 /* 文字变为深浪蓝 */
    border-color: #8AB2D6 #8AB2D6 transparent #8AB2D6; /* 左右边框为柔和波浪蓝，底部边框透明 */
    padding-bottom: 13px;          /* 增加底部内边距，使标签轻微“下沉”，覆盖面板顶部边框 */
}

/* 禁用的一级标签 */
QTabWidget#MainTabWidget QTabBar::tab:disabled {
    background-color: #E8EEF4;     /* 背景颜色 */
    color: #A8B8C8;                 /* 文字颜色变灰 */
    border-color: #D5E0E8;         /* 边框颜色变浅 */
}


/* ==========================================================================
   二级标签页 (Sub-Tabs - Ripples)
   ========================================================================== */

/* 二级标签页的内容面板 */
QTabWidget#SubTabWidget::pane {
    border: none;              /* 无边框 */
    background-color: transparent; /* 背景透明 */
}

/* 二级标签页的标签栏 */
QTabWidget#SubTabWidget::tab-bar {
    alignment: left;           /* 标签左对齐 */
    border-bottom: 1px solid #C5D9E8; /* 底部有一条浅天蓝色分隔线 */
}

/* 二级标签页的单个标签 */
QTabWidget#SubTabWidget QTabBar::tab {
    background: transparent;       /* 背景透明 */
    color: #8AB2D6;                 /* 文字颜色：柔和波浪蓝 */
    border: none;                  /* 无边框 */
    border-bottom: 4px solid transparent; /* 底部有4像素高的透明边框，用于占位 */
    padding: 8px 20px;             /* 内边距 */
    font-size: 18px;               /* 字号 */
}

/* 鼠标悬停在未选中的二级标签上时 */
QTabWidget#SubTabWidget QTabBar::tab:hover:!selected {
    color: #3B6894;                 /* 文字变为深浪蓝 */
    border-bottom: 4px solid #A79B82; /* 底部占位边框变为沙/木色 */
}

/* 选中的二级标签 */
QTabWidget#SubTabWidget QTabBar::tab:selected {
    color: #3B6894;                 /* 文字变为深浪蓝 */
    font-weight: bold;             /* 字体加粗 */
    border-bottom: 4px solid #3B6894; /* 底部占位边框变为深浪蓝 */
}

/* 禁用的二级标签 */
QTabWidget#SubTabWidget QTabBar::tab:disabled {
    color: #A8B8C8; /* 文字颜色变灰 */
}


/* ==========================================================================
   按钮样式 (Buttons - Driftwood & Sea)
   ========================================================================== */

/* 默认按钮样式 */
QPushButton {
    border: 1px solid #A79B82;     /* 边框颜色：沙/木色 (Driftwood) */
    padding: 10px 22px;            /* 内边距 */
    border-radius: 0px;            /* 无圆角 */
    font-size: 18px;               /* 字号 */
    background-color: transparent; /* 背景透明 */
    color: #A79B82;                 /* 文字颜色：沙/木色 */
    min-height: 30px;              /* 最小高度 */
}
/* 鼠标悬停在默认按钮上时 */
QPushButton:hover {
    background-color: rgba(167, 155, 130, 0.1); /* 半透明的沙/木色背景 */
    color: #1C2A40;                             /* 文字变为墨色 */
    border-color: #1C2A40;                      /* 边框变为墨色 */
}
/* 按下默认按钮时 */
QPushButton:pressed {
    background-color: rgba(138, 178, 214, 0.2); /* 半透明的柔和波浪蓝色背景 */
    border-color: #8AB2D6;                      /* 边框变为柔和波浪蓝 */
}
/* 禁用的默认按钮 */
QPushButton:disabled {
    background-color: transparent; /* 背景透明 */
    color: #A8B8C8;                 /* 文字颜色变灰 */
    border-color: #D5E0E8;         /* 边框颜色变浅 */
}

/* 强调/主要按钮样式 */
QPushButton#AccentButton {
    background-color: #3B6894; /* 背景颜色：深浪蓝 (Sea) */
    color: #FFFFFF;            /* 文字颜色：纯白 */
    font-weight: bold;         /* 字体加粗 */
    border: 1px solid #1C2A40; /* 边框颜色：墨色 */
    padding: 12px 24px;        /* 更大的内边距 */
}
/* 鼠标悬停在强调按钮上时 */
QPushButton#AccentButton:hover {
    background-color: #4A7BA8; /* 背景颜色加深 */
}
/* 按下强调按钮时 */
QPushButton#AccentButton:pressed {
    background-color: #2C5A80; /* 背景颜色变得更深 */
}

/* 链接式按钮样式 */
QPushButton#LinkButton {
    background-color: transparent;     /* 背景透明 */
    color: #A79B82;                     /* 文字颜色：沙/木色 */
    border: none;                      /* 无常规边框 */
    text-decoration: none;             /* 无文本下划线 */
    padding: 5px;                      /* 内边距 */
    font-size: 17px;                   /* 字号 */
    border-bottom: 1px dashed #A79B82; /* 底部有沙/木色的虚线 */
    min-height: 0px;                   /* 移除最小高度限制 */
}
/* 鼠标悬停在链接按钮上时 */
QPushButton#LinkButton:hover {
    color: #1C2A40;                     /* 文字变为墨色 */
    border-bottom: 1px solid #1C2A40;   /* 底部虚线变为实线，颜色变为墨色 */
}
/* 按下链接按钮时 */
QPushButton#LinkButton:pressed {
    color: #3B6894; /* 文字变为深浪蓝 */
}

/* 删除操作按钮样式 */
QPushButton#ActionButton_Delete {
    background-color: transparent; /* 背景透明 */
    color: #E53935;                /* 文字颜色：醒目的红色 */
    font-weight: bold;             /* 字体加粗 */
    border: 1px solid #E53935;     /* 边框颜色：醒目的红色 */
    padding: 12px 24px;            /* 内边距 */
}
/* 鼠标悬停在删除按钮上时 */
QPushButton#ActionButton_Delete:hover {
    background-color: rgba(229, 57, 53, 0.1); /* 半透明的红色背景 */
}
/* 按下删除按钮时 */
QPushButton#ActionButton_Delete:pressed {
    background-color: rgba(229, 57, 53, 0.2); /* 更深的半透明红色背景 */
}


/* ==========================================================================
   其他常用控件 (Other Common Controls)
   ========================================================================== */

/* 文本标签 */
QLabel {
    color: #1C2A40;                 /* 文字颜色：墨色 */
    background-color: transparent; /* 背景透明 */
}
/* --- [核心修改] --- */
/*
 * 新增：鼠标悬停在 QLabel 上时的效果。
 * 注意：这个规则会应用到所有普通的 QLabel 上。
 * 我们已经在其他地方为有特殊背景或功能的 QLabel (如 #PromptTextLabel)
 * 定义了更具体的样式，所以它们不会受到这个通用规则的影响。
 */
QLabel:hover {
    color: #3B6894; /* 文字颜色变为“深浪蓝” */
}

/* 单行输入框、多行纯文本输入框、文本浏览器 */
QLineEdit,
QPlainTextEdit,
QTextBrowser {
    background-color: #FFFFFF;     /* 背景颜色：纯白 */
    border: 1px solid #C5D9E8;     /* 默认边框：浅天蓝 (Light Sky Blue) */
    border-radius: 0px;            /* 无圆角 */
    padding: 8px;                  /* 内边距 */
    color: #1C2A40;                 /* 文字颜色：墨色 */
    selection-background-color: #8AB2D6; /* 选中文本的背景色：柔和波浪蓝 */
    selection-color: #FFFFFF;      /* 选中文本的文字颜色：纯白 */
}
/* --- [核心修改] --- */
QLineEdit:hover,
QPlainTextEdit:hover,
QTextBrowser:hover {
    /* 悬停时，边框变为更明确的“柔和波浪蓝” */
    border-color: #8AB2D6; /* 边框颜色：柔和波浪蓝 (Soft Wave Blue) */
}
QLineEdit:focus,
QPlainTextEdit:focus,
QTextBrowser:focus {
    /* 获得焦点时，边框变为最醒目的“深浪蓝” */
    border-color: #3B6894; /* 边框颜色：深浪蓝 (Deep Wave Blue) */
}

/* 文本浏览器内的链接样式 */
QTextBrowser a {
    color: #3B6894;          /* 链接颜色：深浪蓝 */
    text-decoration: none;  /* 无下划线 */
}
QTextBrowser a:hover {
    text-decoration: underline; /* 鼠标悬停时显示下划线 */
    color: #1C2A40;              /* 颜色变为墨色 */
}

/* 下拉选择框 */
QComboBox {
    background-color: #FFFFFF;     /* 背景颜色：纯白 */
    border: 1px solid #C5D9E8;     /* 默认边框：浅天蓝 */
    border-radius: 0px;            /* 无圆角 */
    padding: 7px 8px;              /* 内边距 */
    color: #1C2A40;                 /* 文字颜色：墨色 */
    min-height: 26px;              /* 最小高度 */
}
/* --- [核心修改] --- */
QComboBox:hover {
    /* 悬停时，边框变为更明确的“柔和波浪蓝” */
    border-color: #8AB2D6; /* 边框颜色：柔和波浪蓝 */
}
QComboBox:focus {
    /* 获得焦点时，边框变为最醒目的“深浪蓝” */
    border-color: #3B6894; /* 边框颜色：深浪蓝 */
}

/* 下拉选择框的下拉箭头区域 */
QComboBox::drop-down {
    border: none;              /* 无边框 */
    background-color: #E8EEF4; /* 背景颜色：更亮的晴空色 */
    width: 20px;               /* 宽度 */
}
/* 下拉选择框的弹出菜单视图 */
QComboBox QAbstractItemView {
    border: 1px solid #8AB2D6;     /* 边框颜色：柔和波浪蓝 */
    background-color: #FFFFFF;     /* 背景颜色：纯白 */
    selection-background-color: #E8EEF4; /* 选中项背景色：更亮的晴空色 */
    selection-color: #1C2A40;      /* 选中项文字颜色：墨色 */
    outline: 0px;                  /* 移除焦点时的虚线框 */
    border-radius: 0px;            /* 无圆角 */
    color: #1C2A40;                 /* 默认文字颜色：墨色 */
}
/* 下拉菜单中的每个项目 */
QComboBox QAbstractItemView::item {
    padding: 8px 12px; /* 内边距 */
}

/* 分组框 */
QGroupBox {
    border: none;                  /* 移除默认的边框 */
    /* 顶部边框：从柔和波浪蓝到沙/木色的线性渐变 */
    border-top: 3px solid qlineargradient(x1:0, y1:0, x2:1, y2:0, stop:0 #8AB2D6, stop:1 #A79B82);
    border-bottom: 1px solid #C5D9E8; /* 底部边框：浅天蓝 */
    margin-top: 15px;              /* 顶部外边距，为标题留出空间 */
    padding: 25px 15px 15px 15px;  /* 内边距 (上 右 下 左) */
    background-color: transparent; /* 背景透明 */
}
/* 分组框的标题 */
QGroupBox::title {
    subcontrol-origin: margin;       /* 标题的原点基于外边距 */
    subcontrol-position: top left;   /* 标题位于左上角 */
    padding: 2px 10px;               /* 内边距 */
    margin-left: 5px;                /* 左外边距 */
    background-color: #C5D9E8;       /* 背景颜色：浅天蓝 */
    color: #1C2A40;                   /* 文字颜色：墨色 */
    font-weight: bold;               /* 字体加粗 */
    border-radius: 0px;              /* 无圆角 */
}

/* 列表和表格控件 */
QListWidget,
QTableWidget {
    background-color: #FFFFFF;         /* 背景颜色：纯白 */
    border: 1px solid #C5D9E8;         /* 边框颜色：浅天蓝 */
    border-radius: 0px;                /* 无圆角 */
    outline: 0px;                      /* 移除焦点时的虚线框 */
    alternate-background-color: #F8FAFC; /* 交替行颜色，产生条纹效果 */
    gridline-color: #E8EEF4;           /* 网格线颜色 */
}
/* 表格左上角的全选角按钮 */
QTableCornerButton::section {
    background-color: #E8EEF4; /* 默认背景：浅天蓝 */
    border: 1px solid #C5D9E8; /* 默认边框：浅天蓝 */
}
/* --- [核心修改] --- */
/* 新增：鼠标悬停在左上角全选角按钮上时的效果 */
QTableCornerButton::section:hover {
    background-color: #FFFFFF; /* 背景变为纯白，产生“浮起”感 */
    border: 1px solid #8AB2D6; /* 边框变为柔和波浪蓝 */
}
/* 新增：鼠标按下左上角全选角按钮时的效果 */
QTableCornerButton::section:pressed {
    background-color: #D5E0E8; /* 背景变为更深的灰色，模拟“按下” */
    border: 1px solid #3B6894; /* 边框变为深浪蓝 */
}

/* 列表控件中的项目 */
QListWidget::item {
    padding: 10px;                   /* 内边距 */
    border-bottom: 1px solid #E8EEF4; /* 底部边框作为分隔线 */
    color: #1C2A40;                   /* 文字颜色：墨色 */
}
/* --- [核心修改] --- */
/* 新增：鼠标悬停在未选中的列表项目上时的效果 */
QListWidget::item:hover:!selected {
    background-color: rgba(138, 178, 214, 0.2); /* 背景色：柔和的、半透明的波浪蓝色 */
}
/* 选中的列表项目 */
QListWidget::item:selected {
    background-color: #3B6894; /* 背景色：实色的深浪蓝 */
    color: #FFFFFF;            /* 文字颜色：纯白 */
}

/* --- [核心修改] 表格单元格样式 --- */
/* 新增：鼠标悬停在未选中的表格单元格上时的效果 */
QTableWidget::item:hover:!selected {
    background-color: rgba(138, 178, 214, 0.2); /* 背景色：与QListWidget::item:hover一致 */
}
/* 选中的表格单元格 */
QTableWidget::item:selected {
    background-color: #3B6894; /* 背景色：深浪蓝 */
    color: #FFFFFF;            /* 文字颜色：纯白 */
}
/* 表格内用于编辑的输入框 */
QTableWidget QLineEdit {
    border-radius: 0px;        /* 无圆角 */
    border: 1px solid #3B6894; /* 边框：深浪蓝，表示正在编辑 */
    background-color: #FFFFFF; /* 背景：纯白 */
    color: #1C2A40;             /* 文字：墨色 */
}

/* 列表和表格的表头 */
QHeaderView::section {
    background-color: #E8EEF4;       /* 背景颜色：更亮的晴空色 */
    padding: 10px;                   /* 内边距 */
    border: none;                    /* 无常规边框 */
    border-bottom: 2px solid #3B6894;/* 底部边框：深浪蓝 */
    font-weight: bold;               /* 字体加粗 */
    color: #3B6894;                   /* 文字颜色：深浪蓝 */
}
/* --- [核心修改] 更细微的悬停效果 --- */
QHeaderView::section:hover {
    background-color: #D3DDE9;     /* 背景颜色加深 */
    color: #1C2A40;                 /* 文字变为更深的“墨色” */
    border-bottom-color: #A79B82;   /* 底部边框变为“沙/木色” */
}

/* 进度条 */
QProgressBar {
    border: 1px solid #A79B82; /* 边框：沙/木色 */
    border-radius: 0px;        /* 无圆角 */
    text-align: center;        /* 文本居中 */
    color: #FFFFFF;            /* 文字颜色：纯白 (显示在进度块上) */
    height: 22px;              /* 高度 */
    background-color: #F5F8FA; /* 背景(未填充部分)：晴空蓝灰 */
    font-weight: bold;         /* 字体加粗 */
}
/* 进度条的已填充部分 */
QProgressBar::chunk {
    background-color: #3B6894; /* 背景颜色：深浪蓝 */
    margin: 1px;               /* 与边框留出1像素的间距 */
}

/* 水平滑动条的凹槽 (轨道) */
QSlider::groove:horizontal {
    border: none;              /* 无边框 */
    height: 4px;               /* 轨道高度 */
    background: #C5D9E8;       /* 轨道背景：浅天蓝 */
    margin: 2px 0;             /* 上下外边距 */
    border-radius: 0px;        /* 无圆角 */
}
/* --- [核心修改] --- */
QSlider::groove:horizontal:hover {
    /* 悬停在轨道上时，轨道颜色加深 */
    background: #8AB2D6;
}

/* 水平滑动条的滑块 */
QSlider::handle:horizontal {
    background: #FFFFFF;       /* 滑块背景：纯白 */
    border: 1px solid #3B6894; /* 默认边框：深浪蓝 */
    width: 10px;               /* 滑块宽度 */
    height: 20px;              /* 滑块高度 */
    margin: -8px 0;            /* 上下负外边距，使滑块在视觉上“跨”在轨道上 */
    border-radius: 0px;        /* 无圆角 */
}
/* 悬停在滑块上时 */
QSlider::handle:horizontal:hover {
    border: 1px solid #1C2A40; /* 边框变为墨色 */
    background: #A79B82;       /* 背景变为沙/木色 */
}
/* 按下滑块时 */
QSlider::handle:horizontal:pressed {
    border: 1px solid #1C2A40; /* 边框变为墨色 */
    background: #3B6894;       /* 背景变为深浪蓝 */
}

/* 垂直滚动条 */
QScrollBar:vertical {
    border: none;              /* 无边框 */
    background: #F5F8FA;       /* 背景：晴空蓝灰 */
    width: 14px;               /* 宽度 */
    margin: 0;                 /* 无外边距 */
}
/* 垂直滚动条的滑块 */
QScrollBar::handle:vertical {
    background: #C5D9E8;       /* 默认背景：浅天蓝 */
    min-height: 30px;          /* 最小高度 */
    border-radius: 0px;        /* 无圆角 */
}

/* 水平滚动条 */
QScrollBar:horizontal {
    border: none;              /* 无边框 */
    background: #F5F8FA;       /* 背景：晴空蓝灰 */
    height: 14px;              /* 高度 */
    margin: 0;                 /* 无外边距 */
}
/* 水平滚动条的滑块 */
QScrollBar::handle:horizontal {
    background: #C5D9E8;       /* 默认背景：浅天蓝 */
    min-width: 30px;           /* 最小宽度 */
    border-radius: 0px;        /* 无圆角 */
}

/* --- [核心修改] --- */
/* 新增：鼠标悬停在滑块上时的效果 (垂直和水平通用) */
QScrollBar::handle:vertical:hover,
QScrollBar::handle:horizontal:hover {
    background: #A8B8C8; /* 颜色加深 */
}
/* 新增：鼠标按下并拖动滑块时的效果 (垂直和水平通用) */
QScrollBar::handle:vertical:pressed,
QScrollBar::handle:horizontal:pressed {
    background: #8AB2D6; /* 变为更醒目的柔和波浪蓝 */
}
/* --- [修改结束] --- */

/* 滚动条的 add-line 和 sub-line (通常是末端的按钮区域) */
QScrollBar::add-line,
QScrollBar::sub-line {
    border: none;        /* 无边框 */
    background: #E8EEF4; /* 背景：更亮的晴空色 */
}
/* 滚动条的箭头图标 */
QScrollBar::up-arrow,
QScrollBar::down-arrow,
QScrollBar::left-arrow,
QScrollBar::right-arrow {
    width: 0;  /* 隐藏默认箭头 */
    height: 0;
}

/* 弹出菜单 */
QMenu {
    background-color: #FFFFFF; /* 背景：纯白 */
    color: #1C2A40;            /* 文字：墨色 */
    border: 1px solid #8AB2D6; /* 边框：柔和波浪蓝 */
    padding: 4px;              /* 内边距 */
